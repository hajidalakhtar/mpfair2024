---
interface Props {
    title: string;
}

const {title} = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8"/>
    <meta name="description" content="Astro description"/>
    <meta name="viewport" content="width=device-width"/>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
    <meta name="generator" content={Astro.generator}/>
    <title>{title}</title>
</head>
<style>
    /* Loading Screen Style */
    #loading-screen {
        position: fixed;
        top: 0;
        left: 0;
        background-color: #e0e0e0;
        width: 100vw;
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        text-align: center;
        transition: transform 1s ease; /* Animasi keluar */
        z-index: 1000;
    }

    /* Animasi geser loading screen */
    .slide-out {
        transform: translateX(100%);
    }

    /* Loader Animasi */
    .loader {
        --c:no-repeat linear-gradient(red 0 0);
        background:
                var(--c),var(--c),var(--c),
                var(--c),var(--c),var(--c),
                var(--c),var(--c),var(--c);
        background-size: 16px 16px;
        animation:
                l32-1 1s infinite,
                l32-2 1s infinite;
    }

    @keyframes l32-1 {
        0%,100% {width:45px;height: 45px}
        35%,65% {width:65px;height: 65px}
    }
    @keyframes l32-2 {
        0%,40%  {background-position: 0 0,0 50%, 0 100%,50% 100%,100% 100%,100% 50%,100% 0,50% 0,0 0,50% 50% }
        60%,100%{background-position: 0 50%, 0 100%,50% 100%,100% 100%,100% 50%,100% 0,50% 0,0 0,50% 50% }
    }

    /* Konten Utama */
    #content {
        text-align: center;
        z-index: 1;
    }
</style>
<body>
<div id="loading-screen">
    <div class="loader"></div>
</div>
<div id="content">
    <slot/>
</div>

<script>
    const loadingScreen = document.getElementById('loading-screen');

    setTimeout(() => {
        // Tambahkan kelas animasi untuk geser keluar dari kiri ke kanan
        loadingScreen.classList.add('slide-out');

        // Setelah animasi selesai, hapus elemen loading screen dari DOM
        setTimeout(() => {
            loadingScreen.remove();
        }, 1000); // Durasi animasi geser
    }, 1500); // Durasi waktu loading
</script>
</body>
</html>