---
import Layout from "../layouts/Layout.astro";
import NavbarGeneral from "../components/NavbarGeneral.jsx";
import Image from "astro/components/Image.astro";
import MapL1 from "../assets/map-lantai1.png";
import MapL2 from "../assets/map-lantai2.png";
import "../styles/global.css";
---

<Layout title="Venue Map">
  <NavbarGeneral client:load />
  <main class="prose prose-lg overflow-x-hidden mt-16">
    <section
      id="festival"
      class="pt-16 px-4 w-full h-screen bg-no-repeat bg-cover bg-top"
      style="background-image: url('/background-b.svg');"
    >
      <h1
        class="text-center font-raleway text-[1.5rem] font-black leading-[130%]"
      >
        Venue Map
      </h1>
      <!-- Lantai 1 -->
      <div
        class="bg-white py-4 px-2 rounded-lg shadow-[0px_1px_2px_0px_rgba(0,0,0,0.30),0px_1px_3px_1px_rgba(0,0,0,0.15)]"
      >
        <div class="px-4">
          <p class="my-0 text-lg font-extrabold">Lantai 1</p>
        </div>
        <div>
          <Image
            src={MapL1}
            class="max-w-full mx-auto mt-0 mb-4"
            alt="Venue Map Lt1"
            loading="eager"
          />
        </div>
        <div class="flex justify-center py-2">
          <a
            href="/tiket"
            class="px-6 py-3 bg-[#EB1B31] text-center text-white rounded-full no-underline font-raleway font-extrabold text-[1rem] leading-[130%] shadow-[0px_6px_10px_4px_rgba(0,0,0,0.15),0px_2px_3px_0px_rgba(0,0,0,0.30)]"
          >
            Lihat Detail
          </a>
        </div>
      </div>

      <!-- Lantai 2 -->
      <div
        class="bg-white mt-8 py-4 px-2 rounded-lg shadow-[0px_1px_2px_0px_rgba(0,0,0,0.30),0px_1px_3px_1px_rgba(0,0,0,0.15)]"
      >
        <div class="px-4">
          <p class="my-0 text-lg font-extrabold">Lantai 2</p>
        </div>
        <div>
          <Image
            src={MapL2}
            class="max-w-full mx-auto mt-0 mb-4"
            alt="Venue Map Lt2"
            loading="eager"
          />
        </div>
        <div class="flex justify-center py-2">
          <a
            href="/tiket"
            class="px-6 py-3 bg-[#EB1B31] text-center text-white rounded-full no-underline font-raleway font-extrabold text-[1rem] leading-[130%] shadow-[0px_6px_10px_4px_rgba(0,0,0,0.15),0px_2px_3px_0px_rgba(0,0,0,0.30)]"
          >
            Lihat Detail
          </a>
        </div>
      </div>
    </section>
  </main>
</Layout>
